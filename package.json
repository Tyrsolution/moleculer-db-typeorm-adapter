{
	"name": "moleculer-db-typeorm-adapter",
	"version": "1.0.0",
	"description": "",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"installDeps": "yarn install && cd ./docgen && yarn install",
		"dev": "nodemon examples/index.js",
		"ci": "jest --watch",
		"clean": "yarn clean:packages && yarn install",
		"clean:packages": "rm -fr yarn.lock package-lock.json dist node_modules",
		"generateDocumentation": "node ./docgen/index.js -t ./templates/README.md -s ./dist/adapter/index.js,./dist/adapter/connectionManager/index.js -d README.md",
		"test": "jest --coverage",
		"lint": "eslint --ext=.js src test",
		"deps": "npm-check -u",
		"coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
		"build": "yarn build:clean && tsc --build tsconfig.json",
		"build:clean": "rimraf dist bin"
	},
	"keywords": [
		"moleculer",
		"microservice",
		"typeorm"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/tyrsolution/moleculer-db-typeorm-adapter.git"
	},
	"author": "Tyr Solutions",
	"license": "MIT",
	"peerDependencies": {
		"moleculer": "^0.14.0"
	},
	"devDependencies": {
		"@types/bluebird": "^3.5.38",
		"@types/jest": "^29.5.1",
		"benchmarkify": "^3.0.0",
		"coveralls": "^3.1.1",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-security": "^1.7.1",
		"jest": "^29.5.0",
		"jest-circus": "^29.5.0",
		"jest-cli": "^29.5.0",
		"jest-junit": "^16.0.0",
		"kleur": "^4.1.5",
		"moleculer": "^0.14.29",
		"nodemon": "^2.0.22",
		"npm-check": "^6.0.1",
		"prettier": "^2.8.8",
		"rimraf": "^5.0.0",
		"ts-jest": "^29.1.0",
		"typescript": "^5.0.4"
	},
	"jest": {
		"testEnvironment": "node",
		"rootDir": "./src",
		"roots": [
			"../test"
		],
		"coverageDirectory": "../coverage",
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/test/services/"
		]
	},
	"engines": {
		"node": ">= 10.x.x"
	},
	"dependencies": {
		"bluebird": "^3.7.2",
		"lodash": "^4.17.21",
		"typeorm": "^0.3.15"
	}
}
