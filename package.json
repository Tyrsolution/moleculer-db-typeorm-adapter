{
	"name": "@tyrsolutions/moleculer-db-typeorm-adapter",
	"version": "1.0.2",
	"description": "TypeORM adapter for moleculer",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"installDeps": "yarn install && cd ./docgen && yarn install",
		"dev": "nodemon examples/index.js",
		"ci": "jest --watch",
		"clean": "yarn clean:packages && yarn install",
		"clean:packages": "rm -fr yarn.lock package-lock.json dist node_modules",
		"generateDocumentation": "node ./docgen/index.js -t ./templates/README.md -s ./dist/index.js -d README.md",
		"test": "jest --coverage",
		"lint": "eslint --ext=.js src test",
		"deps": "npm-check -u",
		"coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
		"postversion": "git push && git push --follow-tags",
		"build": "yarn build:clean && run-p build:dist",
		"build:clean": "rimraf dist bin",
		"build:dist": "rollup -c",
		"build:dts": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
		"release": "np"
	},
	"keywords": [
		"moleculer",
		"microservice",
		"typeorm"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/tyrsolution/moleculer-db-typeorm-adapter.git"
	},
	"author": "Tyr Solutions",
	"license": "MIT",
	"peerDependencies": {
		"moleculer": "^0.14.0"
	},
	"devDependencies": {
		"@ourparentcenter/moleculer-decorators-extended": "^2.0.0",
		"@rollup/plugin-node-resolve": "^15.0.2",
		"@rollup/plugin-typescript": "^11.1.0",
		"@types/bluebird": "^3.5.38",
		"@types/jest": "^29.5.1",
		"benchmarkify": "^3.0.0",
		"better-sqlite3": "^8.3.0",
		"coveralls": "^3.1.1",
		"dts-bundle-generator": "^8.0.1",
		"esbuild": "^0.17.18",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-security": "^1.7.1",
		"jest": "^29.5.0",
		"jest-chain": "^1.1.6",
		"jest-circus": "^29.5.0",
		"jest-cli": "^29.5.0",
		"jest-extended": "^3.2.4",
		"jest-junit": "^16.0.0",
		"kleur": "^4.1.5",
		"moleculer": "^0.14.29",
		"moleculer-db": "^0.8.23",
		"nodemon": "^2.0.22",
		"np": "^7.7.0",
		"npm-check": "^6.0.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"rimraf": "^5.0.0",
		"rollup": "^3.21.0",
		"rollup-plugin-auto-external": "^2.0.0",
		"rollup-plugin-dts-bundle": "^1.0.0",
		"rollup-plugin-esbuild": "^5.0.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"ts-jest": "^29.1.0",
		"typescript": "^5.0.4"
	},
	"jest": {
		"coverageDirectory": "<rootDir>/coverage",
		"testEnvironment": "node",
		"collectCoverage": false,
		"rootDir": "./test",
		"transform": {
			"^.+\\.(ts|tsx)$": [
				"ts-jest",
				{
					"tsconfig": "tsconfig.json"
				}
			]
		},
		"testRegex": ".*\\.(test|spec).(ts|js)$",
		"setupFiles": [],
		"setupFilesAfterEnv": [
			"jest-chain",
			"jest-extended/all"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"engines": {
		"node": ">= 10.x.x"
	},
	"dependencies": {
		"bluebird": "^3.7.2",
		"lodash": "^4.17.21",
		"tslib": "^2.5.0",
		"typeorm": "^0.3.15"
	},
	"publishConfig": {
		"access": "public"
	}
}
