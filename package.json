{
	"name": "@tyrsolutions/moleculer-db-typeorm-adapter",
	"version": "1.2.2",
	"description": "TypeORM adapter for moleculer",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"installDeps": "yarn install && cd ./docgen && yarn install",
		"dev": "nodemon examples/index.js",
		"ci": "jest --watch",
		"clean": "yarn clean:packages && yarn install",
		"clean:packages": "rm -fr yarn.lock package-lock.json dist node_modules",
		"generateDocumentation": "node ./docgen/index.js -t ./templates/README.md -s ./dist/index.js -d README.md",
		"serveDocs": "docsify serve docs",
		"test": "jest --coverage",
		"lint": "eslint --ext=.js src test",
		"deps": "npm-check -u",
		"coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
		"postversion": "git push && git push --follow-tags",
		"pre-release": "yarn build:clean && run-p build:dist",
		"build-release": "yarn build:clean && set NODE_ENV=release&& run-p build:dist",
		"build:clean": "rimraf dist bin",
		"build:dist": "rollup -c",
		"build:dts": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
		"release": "np"
	},
	"keywords": [
		"moleculer",
		"microservice",
		"typeorm"
	],
	"homepage": "https://tyrsolution.github.io/moleculer-db-typeorm-adapter",
	"repository": {
		"type": "git",
		"url": "https://github.com/tyrsolution/moleculer-db-typeorm-adapter.git"
	},
	"author": "Tyr Solutions",
	"license": "MIT",
	"peerDependencies": {},
	"devDependencies": {
		"@ourparentcenter/moleculer-decorators-extended": "^2.0.0",
		"@rollup/plugin-auto-install": "^3.0.4",
		"@rollup/plugin-commonjs": "^25.0.2",
		"@rollup/plugin-json": "^6.0.0",
		"@rollup/plugin-typescript": "^11.1.1",
		"@types/bluebird": "^3.5.38",
		"@types/core-js": "^2.5.5",
		"@types/flat": "^5.0.2",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.3.1",
		"benchmarkify": "^3.0.0",
		"better-sqlite3": "^8.4.0",
		"coveralls": "^3.1.1",
		"dts-bundle-generator": "^8.0.1",
		"esbuild": "^0.18.7",
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-security": "^1.7.1",
		"jest": "^29.5.0",
		"jest-chain": "^1.1.6",
		"jest-circus": "^29.5.0",
		"jest-cli": "^29.5.0",
		"jest-extended": "^4.0.0",
		"jest-junit": "^16.0.0",
		"kleur": "^4.1.5",
		"moleculer-db": "^0.8.23",
		"nodemon": "^2.0.22",
		"np": "^7.7.0",
		"npm-check": "^6.0.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"rimraf": "^5.0.1",
		"rollup": "^3.25.1",
		"rollup-plugin-auto-external": "^2.0.0",
		"rollup-plugin-dts-bundle": "^1.0.0",
		"rollup-plugin-esbuild": "^5.0.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-uglify": "^6.0.4",
		"ts-jest": "^29.1.0",
		"tsconfig-paths": "^4.2.0",
		"tslib": "^2.5.3",
		"typeof-items": "^1.0.1",
		"typescript": "^5.1.3"
	},
	"jest": {
		"coverageDirectory": "<rootDir>/coverage",
		"testEnvironment": "node",
		"collectCoverage": false,
		"coveragePathIgnorePatterns": [
			"<rootDir>/docgen"
		],
		"reporters": [
			"default",
			"jest-junit"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": [
				"ts-jest",
				{
					"tsconfig": "tsconfig.json"
				}
			]
		},
		"setupFiles": [],
		"setupFilesAfterEnv": [
			"jest-chain",
			"jest-extended/all"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"engines": {
		"node": ">= 16.x.x"
	},
	"dependencies": {
		"bluebird": "^3.7.2",
		"flat": "^5.0.2",
		"lodash": "^4.17.21",
		"moleculer": "^0.14.29",
		"mongodb": "^5.6.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.17"
	},
	"publishConfig": {
		"access": "public"
	}
}
